{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React app",
  "extends": "@workspace/tsconfig/strictest.json",
  "compilerOptions": {
    "useDefineForClassFields": true,
    "lib": [
      "DOM.Iterable",
      "DOM",
      "ESNext"
    ],
    "allowJs": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "types": [
      "vite/client",
      "vitest/globals"
    ],
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./src/*"
      ]
    }
  },
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}
